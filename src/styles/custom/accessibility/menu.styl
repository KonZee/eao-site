.menu
	position relative
	top 0
	> ul
		display inline-block
		position static
		background none
		text-align justify
		width 100%
		border-bottom 1px solid $color
	&__top-item
		display inline-block
		position relative
		padding 7px 0
		> a
			display inline-block
			padding 13px 14px
			&.active
				font-weight bold
			&:focus
				outline none
		&--submenu
			> a
				padding-right 25px
				&:after
					display block
					position absolute
					font-family FontAwesome
					content "\f077"
					font-size (1em / 14 * 10)
					top 23px
					right 5px
			&:hover
				> a
					&:after
						transform rotate(180deg)
						top 25px
	&__hamburger
		display none
	&__item
		display block
		width 100%
		position relative
		a
			display block
			white-space nowrap
			background $background
			padding 10px 18px
			color $color
		&--submenu
			> a
				padding-right 30px
				&:after
					position absolute
					display block
					content "\f054"
					font-family FontAwesome
					font-size 10px
					top 16px
					right 15px
	&__submenu
		position absolute
		z-index 1000
		padding 10px 0
		border 1px solid $color
		background $background
		opacity 0
		visibility hidden
		pointer-events none
		transition opacity 350ms
		&--1
			left 0
			top 100%
		&--2
			left 100%
			top 0

	// Hovers
	*:hover
		> .menu__submenu
			visibility visible
			opacity 1
			pointer-events auto