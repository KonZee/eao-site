.input
	font-size 14px

	&__button
		color $background
		background $color
		border 4px solid $color
		border-radius 19px
		height calc(2em * 2px)
		padding 0 1em

	&__select
		select
			display none

		> div
			display block
			max-width 20em
			border 1px solid $color
			border-radius 1em
			background $background
			outline none
			overflow hidden
			&.cs-active
				.cs-options
					display block
			.cs-options
				display none
			.cs-placeholder
				display block
				padding 0.25em 1.5em 0.25em 1em
				position relative
				color $color
				&:after
					display block
					position absolute
					content "\f078"
					font-family FontAwesome
					font-size 1em
					right 1em
					top 0.35em
					color $color
			li
				display block
				padding 0.25em 1em
				color $color
				&:hover
					background $color
					color $background


	&__checkbox
		span
			display block
			position relative
			padding-left 1.5em
			color $color
			font-weight normal
			&:before
				display block
				content ""
				position absolute
				width 1em
				height 1em
				top 0.2em
				left 0
				border 2px solid $color
		input
			display none
			&:checked
				+ span
					&:before
						background $color

	&__radio
		span
			display block
			position relative
			padding-left 1.5em
			color $color
			font-weight normal
			&:before
				display block
				content ""
				position absolute
				width 1em
				height 1em
				top 0.2em
				left 0
				border 2px solid $color
				border-radius 50%
		input
			display none
			&:checked
				+ span
					&:before
						background $color
	&__text
		display block
		max-width 20em
		border-radius 1em
		height 2em
		border 1px solid $color
		padding 0 1em
		color $color
		background $background
		&:-webkit-input-placeholder
			color $color
			opacity 1
		&:-moz-placeholder
			color $color
			opacity 1
		&::-moz-placeholder
			color $color
			opacity 1
		&:-ms-input-placeholder
			color $color
			opacity 1
		&:disabled
			box-shadow none
			background $color
			color $background
			&:-webkit-input-placeholder
				color $background
			&:-moz-placeholder
				color $background
			&::-moz-placeholder
				color $background
			&:-ms-input-placeholder
				color $background

textarea
	display block
	max-width 20em
	border-radius 15px
	border 1px solid $color
	padding 0 1em
	color $color
	background $background
	resize vertical
	&:-webkit-input-placeholder
		color $color
		opacity 1
	&:-moz-placeholder
		color $color
		opacity 1
	&::-moz-placeholder
		color $color
		opacity 1
	&:-ms-input-placeholder
		color $color
		opacity 1
	&:disabled
		box-shadow none
		background $color
		color $background
		resize none
		&:-webkit-input-placeholder
			color $background
		&:-moz-placeholder
			color $background
		&::-moz-placeholder
			color $background
		&:-ms-input-placeholder
			color $background

