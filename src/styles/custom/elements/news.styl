.news
	&__item
		padding 30px
		box-shadow 0 0 2px 1px #f5f5f5
		border-radius 4px
		margin-bottom 28px
		h3
			margin-top 0
			color $black
		.data
			color $gray
			margin 15px 0 20px
		.text
			color $black

	&__direction
		> *
			display inline-block
			vertical-align middle
		> a
			display inline-block
			margin-left 40px
			color $black
			text-decoration underline
			font-weight 600