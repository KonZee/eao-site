.search
	display inline-block
	top 0
	right 0
	position absolute
	background $white
	height 34px
	border-radius 17px
	margin 10px 0
	vertical-align top
	padding-right 5px

	&__input
		background none
		border none
		padding 7px 17px
		color $black
		width 250px
		@media screen and (min-width: $screen-lg)
			width 340px

	&__search
	&__close
		color $black