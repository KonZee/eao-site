.search
	display inline-block
	background $white
	height 34px
	border-radius 17px
	margin 10px 0
	vertical-align top
	padding-right 5px

	&__input
		background none
		border none
		padding 7px 17px
		color $black
		width 100px
		transition width 350ms
		&:focus
			width 250px
			@media screen and (min-width: $screen-lg)
				width 340px

	&__search
	&__close
		color $black