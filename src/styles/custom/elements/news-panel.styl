.news-panel

	&__tabs
		position relative
		border none
		text-align justify
		height 36px
		margin-bottom 10px
		&:before
			display block
			content ""
			position absolute
			height 2px
			background #ddd
			left 0
			right 0
			top 18px
		&:after
			content ""
			display inline-block
			width 100%
	&__tab
		display inline-block
		position relative
		z-index 1
		a
			display inline-block
			background #fff
			height 36px
			border-radius 18px
			padding 5px 19px
			border 2px solid transparent
			text-decoration none
			transition background 350ms, color 350ms, border-color 350ms
		&.active
			a
				background $brand-primary
				border-color #ddd
				color #fff
		&:hover
			a
				background #242424
				color #fff
				border-color transparent

	&__item
		padding 10px
		background transparent
		transition background 350ms
		&:hover
			background #fff
		.data
			color $brand-primary
