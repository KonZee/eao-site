// Fonts
body
	font-family "Open Sans", san-serif

// Resets
ul
	margin 0
	padding 0

// Wrappers
.wrapper
	&--normal
		padding 40px
	&--thin
		padding 10px
	&--gray
		background #f2f2f2


// Sticky flex footer
html
body
	display flex
	flex-direction column
	min-height 100%

body
	flex 1 1 auto

.header
.footer
	flex 0 0 auto
.content
	flex 1 0 auto

// Texts
.small
	font-size 12px
h5
	font-weight bold
	margin-bottom 30px