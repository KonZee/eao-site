// Fonts
body
	font-family 'Open Sans', sans-serif

// Resets
ul
	margin 0
	padding 0

li
	list-style-position inside

// Wrappers
.wrapper
	&--normal
		padding 40px 0
	&--thin
		padding 10px 0
	&--gray
		background $gray-light
	&--bottom-border
		border-bottom 1px solid #ddd


// Sticky flex footer
html
body
	display flex
	flex-direction column
	min-height 100%

body
	flex 1 1 auto
	position relative

.header
.footer
	flex 0 0 auto
.content
	flex 1 0 auto

// Texts
.small
	font-size 12px
h5
	font-weight bold
	margin-bottom 30px

.text-brand
	color $brand-primary

// For menu
@media screen and (max-width: $screen-sm-max)
	.no-mobile-relative
		position static

.colorbox
	display none
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background rgba(0,0,0,0.8)
	z-index 1000
	cursor pointer
	&__content
		position fixed
		left 50%
		top 50%
		transform translate(-50%, -50%)
		background white
		max-width 80vw
		max-height 80vh
