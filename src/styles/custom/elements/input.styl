.input
	font-size 14px

	&__button
		color #fff
		background $brand-primary
		border 4px solid #138369
		border-radius 19px
		height 38px
		padding 0 16px
		transition 350ms
		&:hover
			background #0c7b60

	&__select
		select
			display none

		> div
			display block
			max-width 200px
			border 1px solid #d3d3d3
			border-radius 15px
			outline none
			transition 350ms
			overflow hidden
			&.cs-active
				border-color #0e9877
				.cs-options
					display block
				.cs-placeholder
					&:after
						color #0e9877
						transition color 350ms
			.cs-options
				display none
			.cs-placeholder
				display block
				padding 4px 26px 4px 16px
				position relative
				font-size 14px
				color #8e8e8e
				&:after
					display block
					position absolute
					content "\f078"
					font-family FontAwesome
					font-size 7px
					right 16px
					top 9px
					color #d3d3d3
			li
				display block
				padding 4px 16px
				transition 350ms
				color #000
				&:hover
					background #0e9877
					color #fff


	&__checkbox
		span
			display block
			position relative
			padding-left 23px
			color #8e8e8e
			font-weight normal
			transition 350ms
			&:before
				display block
				content "\f00c"
				position absolute
				font-family FontAwesome
				width 14px
				height 14px
				font-size 9px
				padding-left 2px
				top 3px
				left 0
				border 1px solid #138468
				border-radius 2px
				color #fff
				transition 350ms
		input
			display none
			&:checked
				+ span
					color #010101
					&:before
						background #0e9877

	&__radio
		span
			display block
			position relative
			padding-left 23px
			color #8e8e8e
			font-size 14px
			font-weight normal
			transition 350ms
			&:before
				display block
				content ""
				position absolute
				width 14px
				height 14px
				font-size 7px
				top 3px
				left 0
				border 1px solid #138468
				border-radius 50%
				color #fff
				transition 350ms
		input
			display none
			&:checked
				+ span
					color #010101
					&:before
						border-width 5px
	&__text
		display block
		max-width 200px
		border-radius 15px
		height 30px
		box-shadow inset 0 2px 4px #ebebeb
		border 1px solid #d6d6d6
		padding 0 16px
		color #000
		&:-webkit-input-placeholder
			color #8e8e8e
		&:-moz-placeholder
			color #8e8e8e
		&::-moz-placeholder
			color #8e8e8e
		&:-ms-input-placeholder
			color #8e8e8e
		&:disabled
			box-shadow none
			background transparent
			&:-webkit-input-placeholder
				color #d6d6d6
			&:-moz-placeholder
				color #d6d6d6
			&::-moz-placeholder
				color #d6d6d6
			&:-ms-input-placeholder
				color #d6d6d6

textarea
	display block
	max-width 200px
	border-radius 15px
	box-shadow inset 0 2px 4px #ebebeb
	border 1px solid #d6d6d6
	padding 0 16px
	color #000
	resize vertical
	&:-webkit-input-placeholder
		color #8e8e8e
	&:-moz-placeholder
		color #8e8e8e
	&::-moz-placeholder
		color #8e8e8e
	&:-ms-input-placeholder
		color #8e8e8e
	&:disabled
		box-shadow none
		background transparent
		resize none
		&:-webkit-input-placeholder
			color #d6d6d6
		&:-moz-placeholder
			color #d6d6d6
		&::-moz-placeholder
			color #d6d6d6
		&:-ms-input-placeholder
			color #d6d6d6

