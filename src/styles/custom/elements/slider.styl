	100%
		transform rotate(360deg)


// SLider itself
.slider
	&__item
		position relative
		display block
		max-width 100%
		max-height 100%
	&__text
		display block
		position absolute
		bottom 0
		left 0
		right 0
		padding 12px 13px 30px
		background rgba(36,36,36,0.44)
		color #fff
		text-align center

	&__outside-pagination
		position relative
		bottom -5px !important

	&__outside-mobile-pagination
		@media screen and (max-width: $screen-sm-max)
			position relative
			bottom -5px !important

	&__ribbon
		display block
		position absolute
		top 0
		right 0
		z-index 1
		padding 10px
		background $brand-primary
		color $white
		&:hover
			color $white
	&--multiply
		.slider__item
			display inline-block
			float left
			@media screen and (max-width: $screen-xs-max)
				width (100%)
			@media screen and (min-width: $screen-sm) and (max-width: $screen-sm-max)
				width (100% / 3)
			@media screen and (min-width: $screen-md) and (max-width: $screen-md-max)
				width 25%
			@media screen and (min-width: $screen-lg)
				width 20%

			img
				width auto
				height auto
				display table
				margin-left auto
				margin-right auto

	&--arrow-outside
		padding-left 60px
		padding-right 60px
		//- mask out of slider items. Not best idea
		&:before
		&:after
			display block
			position absolute
			content ""
			top 0
			bottom 0
			width 60px
			background $white
			z-index 2
		&:before
			left 0
		&:after
			right 0

	&--text
		img
			display none
		@media screen and (max-width: $screen-sm-max)
			.slider__text
				position relative
				bottom 0
				display table
				margin-left auto
				margin-right auto
				background $brand-primary
				color $white
				height 30px
				border-radius 15px
				padding 4px 15px
				font-size 15px
				font-weight bold
		@media screen and (min-width: $screen-md)
			max-width 50%
			min-width 50%
			float left
			img
				display block

	&--news
		height 40px
		max-width 300px

	img
		width 100%
		max-width 100%
		height auto;

.slider-text
	background #fbfbfb
	border-radius 0 4px 4px 0
	@media screen and (max-width: $screen-sm-max)
		margin-top 10px
	@media screen and (min-width: $screen-md)
		margin-left 50%
	&__tab
		&:not(:first-child)
			display none
	&__item
		padding 10px
		cursor pointer
		background #fbfbfb
		&:not(:last-child)
			border-bottom 1px solid #f2f2f2
		&:first-child
			border-top-right-radius 4px
		&:last-child
			border-bottom-right-radius 4px
		&:hover
		&.active
			background #fff
		.data
			color $brand-primary

