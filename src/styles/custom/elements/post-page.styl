.post-page
	&__data
		color $brand-primary
	&__text
		margin-top 35px
		font-size 16px
		p:not(:last-child)
			margin-bottom 30px
	&__photos
		display flex
		flex-wrap wrap
		justify-content flex-start
		margin-top 20px
		margin-left -15px
		margin-right -15px
		a
			display block
			padding 0 15px
			margin-bottom 15px
			flex 0 0 auto
			@media screen and (min-width: $screen-sm) and (max-width: $screen-md-max)
				width 20%
			@media screen and (min-width: $screen-lg)
				width (100% / 6)
			img
				max-width 100%
