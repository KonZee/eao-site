.header
	position relative
	&__coat
		position absolute
		width 92px
		height 103px
		left 15px
		top -13px
		background $brand-primary
	&__topmenu
		height 54px
		padding 13px 0
		&--black
			background #242424
			color #fff
			fill #fff
			a
				color #fff
				text-decoration none

	&__title
		font-size 20px
		margin 22px 0

	&__menu
		border 1px solid #e2e3e4
		border-radius 31px
		padding 7px
		background #fff
		> *
			display inline-block
			padding 13px 24px
			color #242424
			transition background 350ms, color 350ms
			text-decoration none
			font-weight bold
			border-radius 23px
			&.submenu
				position relative
				padding-right 40px
				&:after
					display block
					position absolute
					font-family FontAwesome
					content "\f078"
					font-size 11px
					top 50%
					transform translateY(-50%)
					right 27px
					transition transform 350 ms linear
				a + ul
					margin 0
					padding 0
					position absolute
					left 0
					//visibility hidden
					//opacity 0
					li
						list-style none
					a
						display block
						width auto
						background #242424
			&:not(:first-child)
				margin-left 6px
			&.active
				background $brand-primary
				color #fff
			&:hover
				background #242424
				color #fff
			&:focus
				outline none

	&:after
		display block
		content ""
		position absolute
		left 0
		bottom 0
		right 0
		height 31px
		background #f2f2f2
		z-index -1


.topmenu
	text-align right
	& > *
		display inline-block
		padding 0
		margin 0
		&:not(:first-child)
			margin-left 70px
	svg
		height 15px
		width auto
		position relative
		top 3px
		margin-right 18px

	&__lang
		position relative
		width 140px
		padding-right 20px
		padding-left 35px
		> ul
			position absolute
			margin 0
			padding 0
			top 100%
			right 0
			z-index 1
			li
				list-style none
			a
				display block
				width 100%
				background #242424
				padding 3px 20px 3px 35px
		> a:after
			position absolute
			font-family FontAwesome
			content "\f078"
			display block
			top 0
			right 0



