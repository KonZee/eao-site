.header
	position relative
	&__coat
		position absolute
		width 92px
		height 103px
		left 15px
		top -13px
		background $brand-primary
	&__topmenu
		height 54px
		&--black
			background #242424
			color #fff
			fill #fff
			a
				color #fff
				text-decoration none

	&__title
		font-size 20px
		margin 22px 0

	&__menu
		> *
			&.submenu
				position relative
				padding-right 40px
				&:after
					display block
					position absolute
					font-family FontAwesome
					content "\f078"
					font-size 11px
					top 50%
					transform translateY(-50%)
					right 27px
					transition transform 350 ms linear
				a + ul
					margin 0
					padding 0
					position absolute
					left 0
					//visibility hidden
					//opacity 0
					li
						list-style none
					a
						display block
						width auto
						background #242424
			&:not(:first-child)
				margin-left 6px

	&:after
		display block
		content ""
		position absolute
		left 0
		bottom 0
		right 0
		height 31px
		background #f2f2f2
		z-index -1


.topmenu
	text-align right
	& > *
		display inline-block
		padding 0
		margin 0
	& > a
		&:not(:last-child)
			padding 17px 35px
		&:last-child
			padding 17px 0 17px 35px
	a img
		margin-right 10px
		position relative
		top -2px
	svg
		height 15px
		width auto
		position relative
		top 3px
		margin-right 18px

	&__lang
		position relative
		> ul
			position absolute
			margin 0
			padding 0
			top 100%
			right 0
			z-index 1
			pointer-events none
			opacity 0
			transition opacity 350ms
			li
				list-style none
			a
				display block
				width 100%
				background #242424
				padding 8px 35px
		> a
			display inline-block
			width 210px
			padding 17px 55px 17px 35px
			text-align right
			&:after
				position absolute
				font-family FontAwesome
				content "\f078"
				display block
				top 18px
				right 35px
		&:hover > ul
			pointer-events auto
			opacity 1




