.header
	position relative
	&__coat
		position absolute
		width 92px
		height 103px
		left 15px
		top -13px
		background $brand-primary
	&__topmenu
		height 54px
		&--black
			background #242424
			color #fff
			fill #fff
			a
				color #fff
				text-decoration none

	&__title
		font-size 20px
		margin 22px 0

	&__menu
		> *
			&.submenu
				position relative
				padding-right 40px
				&:after
					display block
					position absolute
					font-family FontAwesome
					content "\f078"
					font-size 11px
					top 50%
					transform translateY(-50%)
					right 27px
					transition transform 350 ms linear
				a + ul
					margin 0
					padding 0
					position absolute
					left 0
					//visibility hidden
					//opacity 0
					li
						list-style none
					a
						display block
						width auto
						background #242424
			&:not(:first-child)
				margin-left 6px

	&:after
		display block
		content ""
		position absolute
		left 0
		bottom 0
		right 0
		height 31px
		background #f2f2f2
		z-index -1


.topmenu
	text-align right
	& > *
		display inline-block
		padding 0
		margin 0
	& > a
		&:not(:last-child)
			padding 17px 35px
		&:last-child
			padding 17px 0 17px 35px
	a img
		margin-right 10px
		position relative
		top -2px
	svg
		height 15px
		width auto
		position relative
		top 3px
		margin-right 18px

	&__lang
		position relative
		> ul
			position absolute
			margin 0
			padding 0
			top 100%
			right 0
			z-index 1
			pointer-events none
			opacity 0
			transition opacity 350ms
			li
				list-style none
			a
				display block
				width 100%
				background #242424
				padding 8px 35px
		> a
			display inline-block
			width 210px
			padding 17px 55px 17px 35px
			text-align right
			&:after
				position absolute
				font-family FontAwesome
				content "\f078"
				display block
				top 18px
				right 35px
		&:hover > ul
			pointer-events auto
			opacity 1

.menu
	border 1px solid #e2e3e4
	border-radius 31px
	padding 0 7px
	background #fff
	> ul
		display inline-block
	&__top-item
		display inline-block
		position relative
		padding 7px 0
		> a
			display inline-block
			padding 13px 24px
			color #242424
			transition background 350ms, color 350ms
			text-decoration none
			font-weight bold
			border-radius 23px
			&.active
				background $brand-primary
				color #fff
			&:focus
				outline none
		&:hover
			> a
				background #242424
				color #fff
		&--submenu
			> a
				padding-right 40px
				&:after
					display block
					position absolute
					font-family FontAwesome
					content "\f077"
					font-size 10px
					top 23px
					right 27px
					transition transform 200ms linear, top 200ms linear
			&:hover
				> a
					&:after
						transform rotate(180deg)
						top 25px
	&__item
		display block
		width 100%
		position relative
		a
			display block
			white-space nowrap
			background #242424
			padding 10px 18px
			color #fff
			text-decoration none
			&:hover
				background $brand-primary
		&--submenu
			> a
				padding-right 30px
				&:after
					position absolute
					display block
					content "\f054"
					font-family FontAwesome
					font-size 10px
					top 16px
					right 15px
	&__submenu
		position absolute
		z-index 1000
		padding 10px 0
		background #242424
		opacity 0
		visibility hiddne
		pointer-events none
		transition opacity 350ms
		&--1
			left 0
			top 100%
		&--2
			left 100%
			top 0

	// Hovers
	*:hover
		> .menu__submenu
			visibility visible
			opacity 1
			pointer-events auto

	&__search
		display inline-block

.search
	position relative
	vertical-align top
	margin 7px 0
	&__icon
		pointer-events none
		margin 16px 1px 0 0
	&__form
		position absolute
		top 0
		right 0
		padding-left 13px
		background #fff
		input
			border none
			border-bottom 1px solid transparent
			height 46px
			padding 13px 13px 13px 0
			margin 0 0 0 13px
			transition width 350ms, border 350ms
			width 20px
			&:focus
				width 300px
				border-bottom 1px solid #e2e3e4
		a.submit
			display block
			position absolute
			right 0
			top 13px
			width 17px
			height 20px
			cursor default
			pointer-events none
		input:focus + a.submit
			cursor pointer
			pointer-events auto


