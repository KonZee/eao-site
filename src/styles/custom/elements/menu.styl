.menu
	position absolute
	top 0
	left 0
	right 0
	&__hamburger
		cursor pointer
		margin 17px 0 0 15px
		border none
		background transparent
		span
			display block
			width 25px
			height 2px
			background $white
			border-radius 1px
			&:not(:last-child)
				margin-bottom 7px
	> ul
		display none
		position absolute
		margin 0
		padding 0
		left 0
		right 0
		top 54px
		background alpha($black, 0.8)
		z-index 100
	a
		color $white

@media screen and (min-width: $screen-md)
	.menu
		position static
		border 1px solid #e2e3e4
		border-radius 31px
		height 62px
		padding 0 7px
		background #fff
		position relative
		top 0
		> ul
			display inline-block
			position static
			background none
			text-align justify
			width 100%
			&:after
				display inline-block
				width 100%
				content ""
		&__top-item
			display inline-block
			position relative
			padding 7px 0
			> a
				display inline-block
				padding 13px 14px
				color #242424
				transition background 350ms, color 350ms
				text-decoration none
				font-weight bold
				border-radius 23px
				&.active
					background $brand-primary
					color #fff
				&:focus
					outline none
			&:hover
				> a
					background #242424
					color #fff
			&--submenu
				> a
					padding-right 25px
					&:after
						display block
						position absolute
						font-family FontAwesome
						content "\f078"
						font-size 10px
						top 23px
						right 12px
						transition transform 200ms linear, top 200ms linear
				&:hover
					> a
						&:after
							transform rotate(180deg)
							top 25px
		&__hamburger
			display none
		&__item
			display block
			width 100%
			position relative
			a
				display block
				white-space nowrap
				background #242424
				padding 10px 18px
				color #fff
				text-decoration none
				&:hover
					background $brand-primary
			&--submenu
				> a
					padding-right 30px
					&:after
						position absolute
						display block
						content "\f054"
						font-family FontAwesome
						font-size 10px
						top 14px
						right 15px
		&__submenu
			position absolute
			z-index 1000
			padding 10px 0
			background #242424
			opacity 0
			visibility hiddne
			pointer-events none
			transition opacity 350ms
			&--1
				left 0
				top 100%
			&--2
				left 100%
				top 0
		// Open last menu items to left instead to right
		&__top-item:nth-last-child(-n+2)
			.menu__item
				&--submenu
					> a
						padding-left 30px
						padding-right 18px
						&:after
							right auto
							left 15px
							//content "\f053"
							transform rotate(180deg)
			.menu__submenu
				&--1
					left auto
					right 0
				&--2
					left auto
					right 100%
		// Hovers
		*:hover
			> .menu__submenu
				visibility visible
				opacity 1
				pointer-events auto