.other-news
	background $gray-light
	padding-top 30px
	h2
		padding 30px 30px 20px
	h3
		//margin-top 4px
		margin 8px 35px 0

	&__texts
		padding-top 20px

	&__item
		padding 20px 30px
		font-size 16px
		border-top 1px solid transparent
		border-bottom 1px solid transparent
		transition background 350ms, border-color 350ms
		&:hover
			background #fff
			border-top-color #ddd
			border-bottom-color #ddd
		.data
			font-size 12px
			color $brand-primary
			margin-bottom 9px
		a
			color $black
	&__list
		padding 0 30px
		font-size 16px

	&__tab
		&:not(:first-child)
			display none
