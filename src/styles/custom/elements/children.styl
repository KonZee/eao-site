.children
	&__data
		font-size 16px
		font-weight 600
		margin 30px 0
		.data
			color $brand-primary
			margin-left 1em

	&__info
		box-shadow 0 0 2px 1px #f5f5f5
		padding 16px 24px


	&-info
		height 180px
		margin 0 0 30px
		position relative
		&__image
			width 85px
			height 85px
			display inline-block
			vertical-align middle
			border-radius 50%
			border 4px solid $white
			box-shadow 0 0 1px 1px $black
			overflow hidden
			text-align center
			&:after
				display inline-block
				content ""
				height 100%
				vertical-align middle
			img
				display inline-block
				vertical-align middle
				max-width 100%
				max-height 100%
		&__name-age
			display inline-block
			vertical-align middle
			calc (100% - 95px)
			margin-left 10px
			.name
				font-size 18px
				font-weight 600
			.age
				font-size 16px
				color $brand-primary
		&__description
			position absolute
			top 110px
			left 0
			right 0
			background $white
			z-index 10
			box-shadow 0 0 2px 1px #f5f5f5
			&:before
				content ""
				display block
				position absolute
				left 0
				right 0
				top -3px
				height 6px
				background $white
			.text
				padding 0 24px
				height 42px
				overflow hidden
				&.expanded
					height auto
			.switch
				background $gray-light
				padding 5px 24px
				cursor pointer
				.open
					display none