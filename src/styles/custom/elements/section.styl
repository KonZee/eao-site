.section

	&__person
		margin-top 60px
		&:nth-child(2n+1)
			clear both

	&__contacts
		box-shadow 0 0 2px 1px #f5f5f5
		padding 25px
		border-radius 4px
		margin-top 60px

	&__docs
		margin-top 60px
		font-size 16px
		li
			list-style-position inside
			margin 0 0 25px
		a
			color $black
			&:hover
				color $brand-primary

	&__authority
		margin-top 40px
		.title
			background $brand-primary
			color $white
			font-size 16px
			font-weight bold
			padding 20px 70px
			position relative
			cursor pointer
			&:before
				content "\f054"
				display block
				position absolute
				font-family FontAwesome
				width 32px
				height 32px
				border 3px solid $white
				border-radius 50%
				left 22px
				top 15px
				padding 3px 8px
		.description
			padding 20px
			display none
		&.collapsed
			.title
				&:before
					content "\f077"
					padding 1px 5px

	&__other
		margin-top 40px
		margin-bottom 40px
		@media screen and (min-width: $screen-sm) and (max-width: $screen-sm-max)
			[class^="col-"]:nth-child(2n+2)
				clear both
		@media screen and (min-width: $screen-md)
			[class^="col-"]:nth-child(4n+2)
				clear both
		h2
			margin-bottom 40px
		a
			font-size 16px
			display list-item
			color $black
			text-decoration underline
			list-style-position inside
			margin 5px 0

	&__slider
		margin 40px 0

	&__news
		margin-top 40px
		position relative
		.all-news
			position absolute
			right 15px
			top 0
			color $black
			text-decoration underline


.section-person
	&__image
		width 95px
		display inline-block
		vertical-align top
		img
			display block
			border-radius 50%
			border 4px solid $white
			box-shadow 0 0 1px 1px $brand-primary
	&__card
		display inline-block
		vertical-align top
		width calc(100% - 100px)
		font-size 16px
		.position
			color $gray-dark
			margin-bottom 5px
		.name
			color $black

.section-news
	box-shadow 0 0 2px 1px #f5f5f5
	padding 25px
	border-radius 4px
	margin-top 25px
	.title
		font-size 16px
		font-weight bold
	.data
		color $gray-dark
		margin 10px 0
	.text
		font-size 16px
