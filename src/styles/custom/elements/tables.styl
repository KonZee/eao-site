@media screen and (max-width: 768px)
	html[class^="minitable"]
		h1, h2, h3, p, table, header, footer
			display none
		.wrapper
			background transparent
			padding 0

		table[class^="minitable"]
			position relative
			p
				display inline
				font-size 1em
			th, td
				height auto

	html:not([class^="minitable"]) table[class^="minitable"]
		font-size 0
		padding 0
		height 0.5em
		position relative
		cursor pointer
		th, td
			background lighten($black, 40%)
		&:before
			content "Нажмите, чтобы увеличить таблицу"
			display block
			position absolute
			left 50%
			top 50%
			z-index 1
			transform translate(-50%, -50%)
			font-size 18px
			font-size 1.5rem
			font-weight bold
			text-align center
			color $white
